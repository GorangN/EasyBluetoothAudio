<UserControl x:Class="EasyBluetoothAudio.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:EasyBluetoothAudio.Models">

    <Grid Background="{StaticResource DeepBlackBrush}">
        <Border Background="{StaticResource DiagonalStripeBrush}" IsHitTestVisible="False"/>

        <DockPanel Margin="20">

            <!-- Header -->
            <Grid DockPanel.Dock="Top" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <Border Background="{StaticResource AcidYellowBrush}" Width="4" Height="24" Margin="0,0,10,0"/>
                    <TextBlock Text="SETTINGS"
                               Foreground="{StaticResource TextWhiteBrush}"
                               FontSize="18" FontWeight="Bold"
                               VerticalAlignment="Center"
                               FontFamily="Consolas"/>
                </StackPanel>

                <Button Content="&#xE711;"
                        ToolTip="Close Settings"
                        Command="{Binding SettingsViewModel.CloseCommand}"
                        Style="{StaticResource IconButtonStyle}"
                        HorizontalAlignment="Right"/>
            </Grid>

            <!-- Save Button -->
            <Button DockPanel.Dock="Bottom"
                    Content="SAVE"
                    Command="{Binding SettingsViewModel.SaveCommand}"
                    Style="{StaticResource IndustrialButtonStyle}"
                    Height="44"
                    Margin="0,15,0,0"/>

            <!-- Settings Content -->
            <Border BorderBrush="{StaticResource DarkerGreyBrush}" BorderThickness="1" Padding="20">
                <StackPanel>

                    <!-- AUTOSTART -->
                    <CheckBox Style="{StaticResource SettingsCheckBoxStyle}"
                              IsChecked="{Binding SettingsViewModel.AutoStartOnStartup}"
                              Margin="0,0,0,14">
                        <TextBlock FontFamily="Consolas" FontSize="13" Foreground="{StaticResource TextWhiteBrush}">
                            <Run Text="AUTOSTART ON STARTUP"/>
                        </TextBlock>
                    </CheckBox>

                    <!-- SYNC VOLUME -->
                    <CheckBox Style="{StaticResource SettingsCheckBoxStyle}"
                              IsChecked="{Binding SettingsViewModel.SyncVolume}"
                              Margin="0,0,0,14">
                        <TextBlock FontFamily="Consolas" FontSize="13" Foreground="{StaticResource TextWhiteBrush}">
                            <Run Text="SYNC VOLUME"/>
                        </TextBlock>
                    </CheckBox>

                    <!-- AUTO-CONNECT -->
                    <CheckBox Style="{StaticResource SettingsCheckBoxStyle}"
                              IsChecked="{Binding SettingsViewModel.AutoConnect}"
                              Margin="0,0,0,20">
                        <TextBlock FontFamily="Consolas" FontSize="13" Foreground="{StaticResource TextWhiteBrush}">
                            <Run Text="AUTO-CONNECT ON STARTUP"/>
                        </TextBlock>
                    </CheckBox>

                    <!-- AUDIO DELAY -->
                    <TextBlock Text="AUDIO DELAY"
                               Foreground="{StaticResource DarkerGreyBrush}"
                               FontFamily="Consolas"
                               FontSize="11" FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <UniformGrid Columns="3" Margin="0,0,0,0">
                        <RadioButton Style="{StaticResource DelayRadioButtonStyle}"
                                     Margin="0,0,6,0"
                                     IsChecked="{Binding SettingsViewModel.SelectedDelay, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Low}">
                            <TextBlock FontFamily="Consolas" FontSize="12" FontWeight="Bold">
                                <Run Text="LOW"/>&#x0A;<Run Text="25 ms" Foreground="{StaticResource DarkerGreyBrush}" FontSize="10"/>
                            </TextBlock>
                        </RadioButton>

                        <RadioButton Style="{StaticResource DelayRadioButtonStyle}"
                                     Margin="3,0,3,0"
                                     IsChecked="{Binding SettingsViewModel.SelectedDelay, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Medium}">
                            <TextBlock FontFamily="Consolas" FontSize="12" FontWeight="Bold">
                                <Run Text="MEDIUM"/>&#x0A;<Run Text="45 ms (recommended)" Foreground="{StaticResource DarkerGreyBrush}" FontSize="10"/>
                            </TextBlock>
                        </RadioButton>

                        <RadioButton Style="{StaticResource DelayRadioButtonStyle}"
                                     Margin="6,0,0,0"
                                     IsChecked="{Binding SettingsViewModel.SelectedDelay, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=High}">
                            <TextBlock FontFamily="Consolas" FontSize="12" FontWeight="Bold">
                                <Run Text="HIGH"/>&#x0A;<Run Text="70 ms" Foreground="{StaticResource DarkerGreyBrush}" FontSize="10"/>
                            </TextBlock>
                        </RadioButton>
                    </UniformGrid>

                </StackPanel>
            </Border>
        </DockPanel>
    </Grid>
</UserControl>
