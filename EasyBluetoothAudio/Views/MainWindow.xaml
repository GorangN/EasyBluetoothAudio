<Window x:Class="EasyBluetoothAudio.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyBluetoothAudio"
        mc:Ignorable="d"
        Title="EasyBluetoothAudio" Height="300" Width="500"
        Background="{StaticResource DeepBlackBrush}"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Top Right: Bluetooth Button -->
        <Button Content="" 
                Style="{StaticResource IconButtonStyle}" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,20,20,0"
                Command="{Binding OpenBluetoothSettingsCommand}"
                ToolTip="Open Bluetooth Settings"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="60,0">
            <TextBlock Text="Select Bluetooth Device" 
                       Foreground="{StaticResource TextWhiteBrush}" 
                       FontSize="20" FontWeight="SemiBold" 
                       HorizontalAlignment="Center"/>
            <!-- Large Yellow Box (ComboBox) -->
            <ComboBox Style="{StaticResource YellowComboBoxStyle}"
                      ItemsSource="{Binding BluetoothDevices}" 
                      SelectedItem="{Binding SelectedBluetoothDevice}" 
                      Height="50"
                      Margin="0,20,0,20">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Action Buttons -->
            <UniformGrid Columns="2" Margin="0,0,0,0">
                <Button Content="Connect" 
                        Command="{Binding ConnectCommand}"
                        Style="{StaticResource IndustrialButtonStyle}"
                        Margin="0,0,15,0"
                        Height="60"
                        FontSize="18"/>

                <Button Content="Disconnect" 
                        Command="{Binding DisconnectCommand}"
                        Style="{StaticResource IndustrialButtonStyle}"
                        Margin="15,0,0,0"
                        Height="60"
                        FontSize="18"/>
            </UniformGrid>

            <!-- Status & Loading -->
            <StackPanel Margin="0,10,0,0">
                <TextBlock Text="{Binding StatusText}"
                           Foreground="{StaticResource NeonCyanBrush}"
                           FontFamily="Consolas"
                           HorizontalAlignment="Center"
                           FontSize="14"/>

                <ProgressBar IsIndeterminate="True"
                             Height="4"
                             Margin="0,10,0,0"
                             BorderThickness="0"
                             Background="#222"
                             Foreground="{StaticResource AcidYellowBrush}"
                             Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
        </StackPanel>

        <!-- Footer Info -->
        <TextBlock Text="{Binding AppVersion, FallbackValue=UnknownVersion}" 
                   Foreground="{StaticResource DarkerGreyBrush}" 
                   HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                   FontSize="14"
                   Margin="0,0,0,10"/>

        <!-- Bottom Right: Settings (Placeholder) -->
        <Button Content="" 
                Style="{StaticResource IconButtonStyle}" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="20,20,0,0"
                ToolTip="Settings (Coming Soon)"/>
    </Grid>
</Window>
