<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════════
         DARK THEME COLOR DEFINITIONS
         ═══════════════════════════════════════════════════════════ -->
    <Color x:Key="AcidYellowColor">#CCCF00</Color>
    <Color x:Key="DeepBlackColor">#000000</Color>
    <Color x:Key="LightGreyColor">#B0B0B0</Color>
    <Color x:Key="DarkerGreyColor">#444444</Color>
    <Color x:Key="TextWhiteColor">#E0E0E0</Color>
    <Color x:Key="NeonCyanColor">#00FFFF</Color>
    <Color x:Key="NeonGreenColor">#39FF14</Color>
    <Color x:Key="NeonRedColor">#FF3131</Color>
    <Color x:Key="BackgroundColor">#000000</Color>
    <Color x:Key="SurfaceColor">#1A1A1A</Color>
    <Color x:Key="SectionBorderColor">#333333</Color>

    <SolidColorBrush x:Key="AcidYellowBrush" Color="{StaticResource AcidYellowColor}"/>
    <SolidColorBrush x:Key="DeepBlackBrush"  Color="{StaticResource DeepBlackColor}"/>
    <SolidColorBrush x:Key="LightGreyBrush"  Color="{StaticResource LightGreyColor}"/>
    <SolidColorBrush x:Key="DarkerGreyBrush" Color="{StaticResource DarkerGreyColor}"/>
    <SolidColorBrush x:Key="TextWhiteBrush"  Color="{StaticResource TextWhiteColor}"/>
    <SolidColorBrush x:Key="NeonCyanBrush"   Color="{StaticResource NeonCyanColor}"/>
    <SolidColorBrush x:Key="NeonGreenBrush"  Color="{StaticResource NeonGreenColor}"/>
    <SolidColorBrush x:Key="NeonRedBrush"    Color="{StaticResource NeonRedColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush"    Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SectionBorderBrush" Color="{StaticResource SectionBorderColor}"/>

    <!-- ═══════════════════════════════════════════════════════════
         SEMANTIC BRUSHES (DARK THEME)
         ═══════════════════════════════════════════════════════════ -->
    <SolidColorBrush x:Key="PrimaryActionBackgroundBrush" Color="{StaticResource AcidYellowColor}"/>
    <SolidColorBrush x:Key="PrimaryActionForegroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="PrimaryActionBorderBrush"     Color="{StaticResource AcidYellowColor}"/>
    <SolidColorBrush x:Key="PrimaryActionHoverBrush"      Color="#B2B500"/>

    <SolidColorBrush x:Key="ActionBackgroundBrush"        Color="{StaticResource LightGreyColor}"/>
    <SolidColorBrush x:Key="ActionForegroundBrush"        Color="Black"/>
    <SolidColorBrush x:Key="ActionHoverBrush"             Color="#D0D0D0"/>
    <SolidColorBrush x:Key="SecondaryActionHoverBrush"    Color="#555555"/>
    <SolidColorBrush x:Key="StatusOverlayBrush"           Color="#11FFFFFF"/>

    <!-- Settings Specific Brushes -->
    <SolidColorBrush x:Key="SettingsControlBackgroundBrush" Color="{StaticResource DarkerGreyColor}"/>
    <SolidColorBrush x:Key="SettingsControlForegroundBrush" Color="{StaticResource TextWhiteColor}"/>
    <SolidColorBrush x:Key="SettingsControlBorderBrush"     Color="Transparent"/>

</ResourceDictionary>
