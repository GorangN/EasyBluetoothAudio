<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="AcidYellowColor">#CCCF00</Color>
    <Color x:Key="DeepBlackColor">#000000</Color>
    <Color x:Key="LightGreyColor">#B0B0B0</Color>
    <Color x:Key="DarkerGreyColor">#444444</Color>
    <Color x:Key="TextWhiteColor">#E0E0E0</Color>
    <Color x:Key="NeonCyanColor">#00FFFF</Color>
    <Color x:Key="NeonGreenColor">#39FF14</Color>
    <Color x:Key="NeonRedColor">#FF3131</Color>

    <SolidColorBrush x:Key="AcidYellowBrush" Color="{StaticResource AcidYellowColor}"/>
    <SolidColorBrush x:Key="DeepBlackBrush"  Color="{StaticResource DeepBlackColor}"/>
    <SolidColorBrush x:Key="LightGreyBrush"  Color="{StaticResource LightGreyColor}"/>
    <SolidColorBrush x:Key="DarkerGreyBrush" Color="{StaticResource DarkerGreyColor}"/>
    <SolidColorBrush x:Key="TextWhiteBrush"  Color="{StaticResource TextWhiteColor}"/>
    <SolidColorBrush x:Key="NeonCyanBrush"   Color="{StaticResource NeonCyanColor}"/>
    <SolidColorBrush x:Key="NeonGreenBrush"  Color="{StaticResource NeonGreenColor}"/>
    <SolidColorBrush x:Key="NeonRedBrush"    Color="{StaticResource NeonRedColor}"/>

    <VisualBrush x:Key="DiagonalStripeBrush" TileMode="Tile" Viewport="0,0,10,10" ViewportUnits="Absolute">
        <VisualBrush.Visual>
            <Canvas Width="10" Height="10">
                <Path Data="M 0,10 L 10,0 M -2,2 L 2,-2 M 8,12 L 12,8" Stroke="#11FFFFFF" StrokeThickness="3"/>
            </Canvas>
        </VisualBrush.Visual>
    </VisualBrush>

    <!-- ═══════════════════════════════════════════════════════════
         INDUSTRIAL BUTTON (Flat Grey, Sharp Corners)
         ═══════════════════════════════════════════════════════════ -->
    <Style x:Key="IndustrialButtonStyle" TargetType="Button">
        <Setter Property="Background"  Value="{StaticResource LightGreyBrush}"/>
        <Setter Property="Foreground"  Value="Black"/>
        <Setter Property="FontWeight"  Value="SemiBold"/>
        <Setter Property="FontSize"    Value="16"/>
        <Setter Property="Cursor"      Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#D0D0D0"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#999999"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.35"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════
         YELLOW COMBOBOX  (Large Acid Yellow with working dropdown)
         ═══════════════════════════════════════════════════════════ -->
    <Style x:Key="YellowComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background"  Value="{StaticResource AcidYellowBrush}"/>
        <Setter Property="Foreground"  Value="Black"/>
        <Setter Property="FontSize"    Value="26"/>
        <Setter Property="FontWeight"  Value="Medium"/>
        <Setter Property="Cursor"      Value="Hand"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <ToggleButton x:Name="ToggleButton"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      Focusable="False"
                                      ClickMode="Press">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border Background="{StaticResource AcidYellowBrush}" SnapsToDevicePixels="True"/>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>

                        <Grid Margin="20,0" IsHitTestVisible="False">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="&#xE70D;" FontFamily="Segoe MDL2 Assets"
                                       VerticalAlignment="Center" FontSize="20" Foreground="Black"
                                       Margin="0,0,15,0"/>

                            <ContentPresenter Grid.Column="1"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                              VerticalAlignment="Center" HorizontalAlignment="Left"
                                              IsHitTestVisible="False"/>
                        </Grid>

                        <Popup x:Name="Popup" Placement="Bottom"
                               IsOpen="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                               AllowsTransparency="True" Focusable="False"
                               PopupAnimation="Slide">
                            <Border Background="{StaticResource AcidYellowBrush}"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="300" BorderThickness="0"
                                    SnapsToDevicePixels="True">
                                <ScrollViewer SnapsToDevicePixels="True">
                                    <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ComboBoxItem">
        <Setter Property="Background" Value="{StaticResource AcidYellowBrush}"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize"   Value="20"/>
        <Setter Property="Padding"    Value="20,10"/>
        <Setter Property="Cursor"     Value="Hand"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#B2B500"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="FontWeight" Value="Bold"/>
            </Trigger>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background" Value="#B2B500"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════
         ICON BUTTON (Transparent, MDL2 glyph)
         ═══════════════════════════════════════════════════════════ -->
    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Background"      Value="Transparent"/>
        <Setter Property="BorderThickness"  Value="0"/>
        <Setter Property="Foreground"       Value="{StaticResource DarkerGreyBrush}"/>
        <Setter Property="FontSize"         Value="24"/>
        <Setter Property="FontFamily"       Value="Segoe MDL2 Assets"/>
        <Setter Property="Cursor"           Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="Transparent">
                        <TextBlock Text="{TemplateBinding Content}"
                                   FontFamily="{TemplateBinding FontFamily}"
                                   FontSize="{TemplateBinding FontSize}"
                                   Foreground="{TemplateBinding Foreground}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource LightGreyBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════
         SETTINGS CHECKBOX (Flat, acid-yellow checkmark)
         ═══════════════════════════════════════════════════════════ -->
    <Style x:Key="SettingsCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Cursor"     Value="Hand"/>
        <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border x:Name="Box"
                                Width="18" Height="18"
                                BorderBrush="{StaticResource DarkerGreyBrush}"
                                BorderThickness="1"
                                Background="Transparent"
                                Margin="0,0,10,0"
                                SnapsToDevicePixels="True">
                            <TextBlock x:Name="Check"
                                       Text="&#xE73E;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="12"
                                       Foreground="{StaticResource AcidYellowBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>
                        </Border>
                        <ContentPresenter VerticalAlignment="Center"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Check" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="Box" Property="BorderBrush" Value="{StaticResource AcidYellowBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Box" Property="BorderBrush" Value="{StaticResource LightGreyBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════
         DELAY RADIO BUTTON (Pill shape — selected = yellow)
         ═══════════════════════════════════════════════════════════ -->
    <Style x:Key="DelayRadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Cursor"     Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="Pill"
                            Background="{StaticResource DarkerGreyBrush}"
                            Padding="10,8"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Pill" Property="Background" Value="{StaticResource AcidYellowBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Pill" Property="Opacity" Value="0.8"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════
         SETTINGS COMBOBOX (Compact, dark background for settings panel)
         ═══════════════════════════════════════════════════════════ -->
    <Style x:Key="SettingsComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background"  Value="{StaticResource DarkerGreyBrush}"/>
        <Setter Property="Foreground"  Value="{StaticResource TextWhiteBrush}"/>
        <Setter Property="FontSize"    Value="13"/>
        <Setter Property="FontFamily"  Value="Consolas"/>
        <Setter Property="Height"      Value="32"/>
        <Setter Property="Cursor"      Value="Hand"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <ToggleButton x:Name="ToggleButton"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      Focusable="False"
                                      ClickMode="Press">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border Background="{StaticResource DarkerGreyBrush}"
                                            BorderBrush="{StaticResource DarkerGreyBrush}"
                                            BorderThickness="1"
                                            SnapsToDevicePixels="True">
                                        <TextBlock Text="&#xE70D;" FontFamily="Segoe MDL2 Assets"
                                                   FontSize="10" Foreground="{StaticResource TextWhiteBrush}"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                                    </Border>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>

                        <ContentPresenter Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                          VerticalAlignment="Center" HorizontalAlignment="Left"
                                          Margin="10,0,24,0"
                                          IsHitTestVisible="False"/>

                        <Popup x:Name="Popup" Placement="Bottom"
                               IsOpen="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                               AllowsTransparency="True" Focusable="False"
                               PopupAnimation="Slide">
                            <Border Background="#333333"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="200" BorderThickness="1"
                                    BorderBrush="{StaticResource DarkerGreyBrush}"
                                    SnapsToDevicePixels="True">
                                <ScrollViewer SnapsToDevicePixels="True">
                                    <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SettingsComboBoxItemStyle" TargetType="ComboBoxItem">
        <Setter Property="Background" Value="#333333"/>
        <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
        <Setter Property="FontSize"   Value="12"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="Padding"    Value="10,6"/>
        <Setter Property="Cursor"     Value="Hand"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource DarkerGreyBrush}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Foreground" Value="{StaticResource AcidYellowBrush}"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Trigger>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background" Value="{StaticResource DarkerGreyBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
